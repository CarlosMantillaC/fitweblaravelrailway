{
    "build": {
        "nixpacksPlan": {
            "phases": {
                "setup": {
                    "pkgs": ["php", "composer", "nodejs"]
                },
                "build": {
                    "cmds": [
                        "composer install --no-dev",
                        "npm install",
                        "npm run build"
                    ]
                },
                "start": {
                    "cmd": "npm run dev:all"
                }
            }
        }
    }
}
